package ch05;

public class i_j {
/* *****				i = 0 1열       j 5-0=5 별을 5번 출력 후 줄 바꿈
 * ****					i = 1 2열	   j 5-1=4    4번 출력 후 줄 바꿈
 * ***					i = 2 3열      j 5-2=3번   *3번 출력 후 줄 바꿈
 * **
 * *
     */
	public static void main(String[] args) {
//		for(int i=0; i<3; i++)
//			for(int j=0; j<5; j++)
//				System.out.println(i + "+" + j);
	for(int i=0; i<5; i++) {    //5, 4 , 3, 2, 1
	for(int j=0; j<5-i; j++)
		
		System.out.print("*");
		System.out.println();
	}		
	
	}

}
