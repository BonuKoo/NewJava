package ch05;

public class ex04 {
//      *  //공백 4개 + *1
//	   **  //공백 3개 + *2개
//	  ***  //공백 2개 + *3개
//	 ****  //공백 1개 + *4개
//	*****  //공백 0개 + *5개
	// i는 열
	// j는 행
	
	public static void main(String[] args) {
	
		for(int i=0; i<5; i++) {		
			
			for(int j=0; j<i+1; j++)		
			
			System.out.print("*");
		System.out.println("");
		}
	}

}

