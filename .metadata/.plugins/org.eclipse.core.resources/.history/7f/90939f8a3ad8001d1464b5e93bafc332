package ch06;

public class test {

	public static void main(String[] args) {
		// 음식점 갔는데, 최대 수량 20번 손님까지 가능 , 15번 손님이 출튀, 21번 손님을 받음
		// 노쇼 손님 랜덤
		// 사람들은 대기표를 갖고 있음 , 15번 손님이 출튀를 해서 다음 순서로 넘어감.
		
		int i = 0;
		while(true) {
			
			if ( i<20); {
			
		System.out.println(i+"번째 손님입니다."); //번호표 출력
		i++;}
			if (i==20) {
				System.out.println("재고가 없습니다.");
				break;
			
			}
	}
	}
}
